<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <!-- add windows executable -->
        <file>
            <source>${project.build.directory}/KB-2.0.exe</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <!-- add *nix start script -->
        <file>
            <source>${project.build.directory}/knowledgebase.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <!-- properties -->
        <file>
            <source>${project.basedir}/src/main/application/kb.properties
            </source>
            <outputDirectory>/conf</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main/application/logging.properties
            </source>
            <outputDirectory>/conf</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main/application/repository.xml
            </source>
            <outputDirectory>/conf</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main/application/keystore.jks
            </source>
            <outputDirectory>/conf/ssl</outputDirectory>
        </file>
    </files>
    <fileSets>
        <!-- add dependency libs -->
        <fileSet>
            <directory>${project.build.directory}/lib</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <!-- add locale -->
        <fileSet>
            <directory>${project.basedir}/src/main/application/locale
            </directory>
            <outputDirectory>/conf/locale</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <!-- add jar -->
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>de.ronnyfriedland:knowledgebase</include>
            </includes>
            <useProjectAttachments>true</useProjectAttachments>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <excludes>
                <exclude>de.ronnyfriedland:knowledgebase</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
