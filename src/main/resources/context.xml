<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="de.ronnyfriedland.knowledgebase" />
    
    <context:property-placeholder location="classpath:kb.properties" />
    
    <bean id="addDocument" class="de.ronnyfriedland.knowledgebase.route.LoadOrInitDocumentRoute">
        <constructor-arg ref="jackRabbitRepository" />
        <constructor-arg value="${get.document.add.url}" />
    </bean>

    <bean id="loadDocument" class="de.ronnyfriedland.knowledgebase.route.LoadOrInitDocumentRoute">
        <constructor-arg ref="jackRabbitRepository" />
        <constructor-arg value="${get.document.load.url}" />
    </bean>

    <bean id="listDocuments" class="de.ronnyfriedland.knowledgebase.route.ListDocumentsRoute">
        <constructor-arg ref="jackRabbitRepository" />
        <constructor-arg value="${get.documents.list.url}" />
    </bean>
    
    <bean id="createDocument" class="de.ronnyfriedland.knowledgebase.route.CreateNewDocumentRoute">
        <constructor-arg ref="jackRabbitRepository" />
        <constructor-arg value="${post.document.create.url}" />
    </bean>

</beans>
